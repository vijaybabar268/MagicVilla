@model MagicVilla_Web.Models.Dto.RegistrationRequestDto


<form method="post">
    <div class="container border p-4">
        <div class="row text-center" style="display: block;">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Enter Username..." />
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name..." />
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" class="form-control" placeholder="Enter Password..." />
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}