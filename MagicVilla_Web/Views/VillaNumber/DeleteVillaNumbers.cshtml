@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumbers">
    <br />
    <div class="conatiner border p-3">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr />

        <div class="row">

            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input readonly asp-for="VillaNumber.VillaNo" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select readonly asp-for="VillaNumber.VillaId" class="form-control" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea readonly asp-for="VillaNumber.SpecialDetails" class="form-control" role="5"></textarea>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="VillaNumber" class="btn-primary btn form-control">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}